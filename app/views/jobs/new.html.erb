<div align =center><h1> Add a Job</h1></div>

<%= form_for  @job  do  |f|   %>
<div>
<%= f.label  :title %>
<%= f.text_field :title %>
</div>
<div>
<%= f.label  :client %>
<%= f.text_field :client %>
</div>
<div>
<%= f.label  :adress %>
<%= f.text_field :adress %>
</div>
<div>
<%= f.label  :description %>
<%= f.text_area :description, size: '60x6' %>
</div>
<div>
<%= f.submit  %>
</div>
<% end %>
